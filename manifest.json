{
  "name": "VK audio",
  "description": "Simple extension for controlling vk player",
  "version": "1.5",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs", "*://*.vk.com/audio*"],
  "browser_action": {
    "default_title": "VK audio",
    "default_popup": "popup.html"
  },
  "icons": { "32": "icon32.png",
    "128": "icon128.png"
  },
  "commands": {
    "Play / Pause": {
      "suggested_key": {
        "windows": "Alt+S",
        "mac": "Alt+S",
        "chromeos": "Alt+S",
        "linux": "Alt+S"
      },
      "description": "Toogle Play / Pause",
      "global": true
    },
    "Forward": {
      "suggested_key": {
        "windows": "Alt+F",
        "mac": "Alt+F",
        "chromeos": "Alt+F",
        "linux": "Alt+F"
      },
      "description": "Next Song",
      "global": true
    },
    "Backward": {
      "suggested_key": {
        "windows": "Alt+B",
        "mac": "Alt+B",
        "chromeos": "Alt+B",
        "linux": "Alt+B"
      },
      "description": "Previous Song",
      "global": true
    },
    "Add": {
      "description": "Add Song to playlist",
      "global": true
    }
  },
  "manifest_version": 2
}
